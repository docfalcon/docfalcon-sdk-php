{
  "name": "docfalcon/docfalcon-sdk",
  "description": "DocFalcon SDK for PHP",
  "type": "library",
  "license": "BSD-3-Clause",
  "minimum-stability": "stable",
  "require": {
    "php": ">=5.5.9",
    "guzzlehttp/guzzle": "^6.3",
    "phpunit/phpunit": "^4.8"
  },
  "authors": [
    { "name": "Diego Ferri", "email": "diego.ferri@looptribe.com" },
    { "name": "Claudio Gandelli", "email": "claudio.gandelli@looptribe.com" },
    { "name": "Andrea Ghidini", "email": "andrea.ghidini@looptribe.com"}
  ],
  "keywords": [
    "docfalcon",
    "pdf",
    "render"
  ],
  "homepage": "https://github.com/docfalcon/docfalcon-sdk-php",
  "config": {
    "platform": {
      "php": "5.5.9"
    }
  },
  "autoload": {
    "psr-4": {"DocFalcon\\": "src/"}
  },
  "scripts": {
    "test": "php vendor/bin/phpunit --colors=always --coverage-html=coverage --coverage-text"
  }
}
